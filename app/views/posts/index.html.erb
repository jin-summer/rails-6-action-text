<p id="notice"><%= notice %></p>

<div class="container">
<div class="h1 p-2 m-3 bg-primary text-white">Posts</div>


<table>
  <tbody>
    <% @posts.each do |post| %>
      <div class="jumbotron m-3 p-3">
      <div class="h3"><%= link_to post.title, post %></div><br>
      <button type="button" class="btn btn-light btn-sm"><%= link_to '編集する', edit_post_path(post) %></button>
      <button type="button" class="btn btn-light btn-sm"><%= link_to '削除する', post, method: :delete, data: { confirm: 'Are you sure?' } %></button>
        </div>
    <% end %>
  </tbody>
</table>


</div>